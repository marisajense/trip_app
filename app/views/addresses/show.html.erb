<h1> Address: <%= @address.country %> </h1>
<%= link_to 'Edit', edit_address_path(@address) %>
<%= link_to 'Delete', address_path(@address, location_id: @location.id), method: :delete,
  data: {confirm: 'Are you sure you want to delete this address?'} %>

<hr />

  <% if @address.country %>
<div>
    <p>Country: <%= @address.country %> </p>
</div>
  <% end%>

  <% if @address.city %>
<div>
    <p> City: <%= @address.city %> </p>
</div>
  <% end %>

  <% if @address.state %>
<div>
    <p> State: <%= @address.state %> </p>
</div>
  <% end %>

<%= link_to 'Addresses', address_path(@address) %>
  <br />
<%= link_to 'All Locations', trip_locations_path(@location.trip) %>
