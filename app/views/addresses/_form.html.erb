<%= form_for @address do |f| %>
  <%= f.label :country %>
  <%= f.text_field :country %>
  <br />

  <%= f.label :city %>
  <%= f.text_field :city %>
  <br />

  <%= f.label :state %>
  <%= f.text_field :state %>
  <br />
  <%= f.hidden_field :location_id, value: @location.id %>

  <%= f.submit %>
<% end %>
