<h1>Trip: <%= @trip.title %></h1>
<%= link_to "Edit", edit_trip_path(@trip) %>
<%= link_to "Delete", trip_path(@trip), method: :delete,
  data: {confirm: 'Are you sure you want to delete this Trip?'}  %>

<hr />

  <% if @trip.month %>
<div>
    <p>Month: <%= @trip.month %> </p>
</div>
  <% end%>

  <% if @trip.year %>
<div>
    <p> Year: <%= @trip.year %> </p>
</div>
  <% end %>

<%= link_to 'Add Location', new_trip_location_path(@trip) %>
<br />
<%= link_to 'All Trips', trips_path %>
