<h1> Location: <%= @location.name %> </h1>
<%= link_to("Edit", edit_trip_location_path(@trip, @location)) %>
<%= link_to("Delete", trip_location_path(@trip, @location), method: :delete,
  data: {confirm: 'Are you sure you want to delete this location?'}) %>

<hr />

  <% if @location.description %>
<div>
    <p>Description: <%= @location.description %> </p>
</div>
  <% end%>

  <% if @location.comments %>
<div>
    <p> Comments: <%= @location.comments %> </p>
</div>
  <% end %>

<div>
    <p>Recommend?: <%= @location.reccomend ? 'Yes' : 'No' %> </p>
</div>

<%= link_to 'Locations', trip_locations_path(@trip) %>
  <br />
<%= link_to 'All Trips', trips_path %>
  <br />
<%= link_to 'New Address', new_address_path(location_id: @location.id) %>
